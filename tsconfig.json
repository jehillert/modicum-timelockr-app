{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": ["es6"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "baseUrl": "./src",
        "paths": {
            "@assets": ["assets/index"],
            "@components": ["components/components-index"],
            "@components/*": ["components/*"],
            "@constants": ["constants/index"],
            "@hooks": ["hooks/index"],
            "@navigation": ["components/navigation/index"],
            "@noke-slices": ["noke/noke-slices/index"],
            "@noke-slices/*": ["noke/noke-slices/*"],
            "@noke": ["noke/index"],
            "@reducers": ["redux"],
            "@root-reducer": ["redux/root-reducer"],
            "@slices": ["components/slices-index"],
            "@screens": ["components/screens-index"],
            "@selectors": ["redux/selectors"],
            "@store": ["redux/store"],
            "@styled": ["components/styled"],
            "@theme": ["theme/theme"],
            "@utilities": ["util/index"],
        }
    },
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
