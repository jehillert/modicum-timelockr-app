// NOTE: Aliases are implemented for the following purposes:
//  - Only paths in .babelrc & tsconfig.json need changing to move a Feature Folders
//  - Quick access to common components
{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": ["es6"],
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "esnext",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "baseUrl": "./src",
        "paths": {
            "@assets": ["assets/index"],
            "@common": ["components/common"],
            "@components/*": ["components/*"],
            "@constants": ["constants/index"],
            "@drawer": ["components/drawer/index"],
            "@hooks": ["hooks/index"],
            "@navigation": ["components/navigation/index"],
            "@noke-slices": ["noke/noke-slices/index"],
            "@noke-slices/*": ["noke/noke-slices/*"],
            "@noke": ["noke/index"],
            "@reducers": ["redux"],
            "@root-reducer": ["redux/root-reducer"],
            "@screens": ["components/screens-index"],
            "@selectors": ["redux/selectors"],
            "@settings": ["components/settings/index"],
            "@store": ["redux/store"],
            "@theme": ["theme/index"],
            "@view-testing": ["components/view-testing/index"],
            "@view-lockout": ["components/view-lockout/index"],
            "@view-duration": ["components/view-duration/index"],
            "@utilities": ["util/index"],
        }
    },
    "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
